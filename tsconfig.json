{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "ES2015",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "jsx": "react",
    "lib": ["es2017", "DOM"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": ".",
    "paths": {
      "test-helpers": ["./test/helpers.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
